<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Primary Color: Medical Blue -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#4CA2E8"/>

    <!-- Secondary Color: Slate Gray -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#495057"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="#DEE2E6"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#212529"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#ADB5BD"/>

    <!-- Status Colors (Traffic Light) -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#17A2B8"/>

    <!-- Special Colors -->
    <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BlackBrush" Color="#000000"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

    <!-- Medical Imaging Colors -->
    <SolidColorBrush x:Key="GrayscaleBrush" Color="#808080"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="#FFFF00"/> <!-- Yellow overlay -->

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D4"/>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#0078D4" Offset="0"/>
        <GradientStop Color="#005A9E" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
