<Window x:Class="HnVue.Console.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HnVue Console"
        Height="900"
        Width="1600"
        MinHeight="768"
        MinWidth="1024"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource ForegroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NavigationBar -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryBrush}"
                Padding="{StaticResource MediumPadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="HnVue"
                               Style="{StaticResource HeaderTextStyle}"
                               Foreground="{StaticResource WhiteBrush}"/>
                    <TextBlock Text=" Console"
                               Style="{StaticResource SubheaderTextStyle}"
                               Foreground="{StaticResource WhiteBrush}"
                               Margin="{StaticResource SmallLeftMargin}"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Patient"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Patient"/>
                    <Button Content="Worklist"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Worklist"/>
                    <Button Content="Acquisition"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Acquisition"/>
                    <Button Content="Image Review"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ImageReview"/>
                    <Button Content="Status"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Status"/>
                    <Button Content="Config"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Config"/>
                    <Button Content="Audit Log"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="AuditLog"/>
                </StackPanel>

                <!-- System Status Badge -->
                <Border Grid.Column="2"
                        Background="{Binding OverallStatus, Converter={StaticResource StatusToBrushConverter}}"
                        CornerRadius="4"
                        Padding="{StaticResource SmallPadding}"
                        Margin="{StaticResource SmallLeftMargin}">
                    <TextBlock Text="{Binding OverallStatus, Converter={StaticResource StatusToStringConverter}}"
                               Style="{StaticResource CaptionTextStyle}"
                               Foreground="{StaticResource WhiteBrush}"/>
                </Border>
            </Grid>
        </Border>

        <!-- ContentRegion -->
        <ContentControl Grid.Row="1"
                       x:Name="ContentRegion"
                       Margin="{StaticResource MediumPadding}"/>

        <!-- StatusBar -->
        <Border Grid.Row="2"
                Background="{StaticResource SecondaryBrush}"
                Padding="{StaticResource MediumPadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current Context -->
                <TextBlock Grid.Column="0">
                    <Run Text="Patient:" FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentPatientName, Mode=OneWay}"/>
                    <Run Text="  |  "/>
                    <Run Text="Study:" FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentStudyId, Mode=OneWay}"/>
                </TextBlock>

                <!-- Locale Selector -->
                <ComboBox Grid.Column="1"
                          Width="120"
                          SelectedIndex="{Binding SelectedLocaleIndex, Mode=TwoWay}"
                          Margin="{StaticResource SmallLeftMargin}">
                    <ComboBoxItem Content="한국어"/>
                    <ComboBoxItem Content="English"/>
                </ComboBox>
            </Grid>
        </Border>
    </Grid>
</Window>
