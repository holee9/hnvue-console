<UserControl x:Class="HnVue.Console.Views.Panels.AECTogglePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="300">

    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="AEC Control"
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="{StaticResource MediumPadding}"/>

            <!-- AEC Toggle -->
            <Grid Grid.Row="1" Margin="{StaticResource MediumPadding}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- AEC Toggle Switch -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="Automatic Exposure Control"
                               Style="{StaticResource BodyTextStyle}"
                               VerticalAlignment="Center"/>

                    <CheckBox IsChecked="{Binding IsAecEnabled}"
                              VerticalAlignment="Center"
                              Margin="{StaticResource MediumLeftMargin}"
                              Command="{Binding ToggleAecCommand}"/>

                    <TextBlock Text="{Binding IsAecEnabled, Converter={StaticResource AecStatusToStringConverter}}"
                               Style="{StaticResource BodyTextStyle}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="{StaticResource SmallLeftMargin}"/>
                </StackPanel>

                <!-- AEC Status Indicator -->
                <Border Grid.Row="1"
                        Background="{Binding IsAecEnabled, Converter={StaticResource AecModeToBrushConverter}}"
                        CornerRadius="{StaticResource MediumCornerRadius}"
                        Padding="{StaticResource MediumPadding}"
                        Margin="{StaticResource MediumTopMargin}">
                    <StackPanel>
                        <TextBlock Text="AEC Status"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Foreground="{StaticResource WhiteBrush}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding IsAecEnabled, Converter={StaticResource AecModeToDescriptionConverter}}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource WhiteBrush}"
                                   Margin="{StaticResource SmallTopMargin}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
