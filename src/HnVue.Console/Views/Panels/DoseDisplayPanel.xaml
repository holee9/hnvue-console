<UserControl x:Class="HnVue.Console.Views.Panels.DoseDisplayPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400"
             Loaded="OnLoaded">

    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Dose Monitoring"
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="{StaticResource MediumPadding}"/>

            <!-- Dose Display -->
            <Grid Grid.Row="1" Margin="{StaticResource MediumPadding}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Current Dose -->
                <Border Grid.Row="0"
                        Background="{StaticResource HeaderBrush}"
                        CornerRadius="{StaticResource SmallCornerRadius}"
                        Padding="{StaticResource MediumPadding}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Current Exposure"
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding CurrentDoseValue}"
                                   Style="{StaticResource TitleTextStyle}"
                                   Foreground="{StaticResource WhiteBrush}"
                                   FontWeight="Bold"/>
                    </Grid>
                </Border>

                <!-- Cumulative Dose -->
                <Border Grid.Row="1"
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource SmallCornerRadius}"
                        Padding="{StaticResource MediumPadding}"
                        Margin="{StaticResource SmallTopMargin}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Cumulative Dose"
                                   Style="{StaticResource BodyTextStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding CumulativeDoseValue}"
                                   Style="{StaticResource SubtitleTextStyle}"
                                   FontWeight="SemiBold"/>
                    </Grid>
                </Border>

                <!-- Alert Display -->
                <Border Grid.Row="2"
                        Background="{Binding AlertLevel, Converter={StaticResource DoseAlertLevelToBrushConverter}}"
                        CornerRadius="{StaticResource SmallCornerRadius}"
                        Padding="{StaticResource MediumPadding}"
                        Margin="{StaticResource SmallTopMargin}"
                        Visibility="{Binding HasAlert, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{Binding AlertLevel}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource WhiteBrush}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding AlertMessage}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                    </Grid>
                </Border>

                <!-- Acknowledge Button -->
                <Button Grid.Row="2"
                        Content="Acknowledge Alert"
                        Style="{StaticResource WarningButtonStyle}"
                        Command="{Binding AcknowledgeAlertCommand}"
                        HorizontalAlignment="Right"
                        Margin="{StaticResource SmallTopMargin}"
                        Visibility="{Binding HasAlert, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
