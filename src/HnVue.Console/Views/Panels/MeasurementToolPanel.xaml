<UserControl x:Class="HnVue.Console.Views.Panels.MeasurementToolPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">

    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Measurement Tools"
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="{StaticResource MediumPadding}"/>

            <!-- Tool Buttons -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="{StaticResource MediumPadding}">
                <StackPanel>
                    <!-- Distance Tool -->
                    <Button Content="ðŸ“ Distance"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SelectDistanceToolCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource MediumPadding}"
                            Margin="{StaticResource SmallBottomMargin}">
                        <Button.ToolTip>
                            <ToolTip Content="Measure distance between two points (mm)"/>
                        </Button.ToolTip>
                    </Button>

                    <!-- Angle Tool -->
                    <Button Content="ðŸ“ Angle"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SelectAngleToolCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource MediumPadding}"
                            Margin="{StaticResource SmallBottomMargin}">
                        <Button.ToolTip>
                            <ToolTip Content="Measure angle between three lines (degrees)"/>
                        </Button.ToolTip>
                    </Button>

                    <!-- Cobb Angle Tool -->
                    <Button Content="ðŸ“Š Cobb Angle"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SelectCobbToolCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource MediumPadding}"
                            Margin="{StaticResource SmallBottomMargin}">
                        <Button.ToolTip>
                            <ToolTip Content="Measure Cobb angle for spinal curvature"/>
                        </Button.ToolTip>
                    </Button>

                    <!-- Annotation Tool -->
                    <Button Content="ðŸ“ Annotation"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SelectAnnotationToolCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource MediumPadding}"
                            Margin="{StaticResource SmallBottomMargin}">
                        <Button.ToolTip>
                            <ToolTip Content="Add text annotation to image"/>
                        </Button.ToolTip>
                    </Button>

                    <!-- Separator -->
                    <Border BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Margin="{StaticResource SmallMargin}"/>

                    <!-- Clear All -->
                    <Button Content="ðŸ—‘ï¸ Clear All"
                            Style="{StaticResource WarningButtonStyle}"
                            Command="{Binding ClearMeasurementsCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="{StaticResource MediumPadding}">
                        <Button.ToolTip>
                            <ToolTip Content="Clear all measurements from this image"/>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </ScrollViewer>

            <!-- Instructions -->
            <Border Grid.Row="2"
                    Background="{StaticResource BackgroundBrush}"
                    Padding="{StaticResource MediumPadding}"
                    Margin="{StaticResource MediumPadding}"
                    CornerRadius="{StaticResource SmallCornerRadius}">
                <StackPanel>
                    <TextBlock Text="Instructions:"
                               Style="{StaticResource CaptionTextStyle}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SelectedMeasurementTool, Converter={StaticResource MeasurementTypeToInstructionsConverter}}"
                               Style="{StaticResource BodyTextStyle}"
                               TextWrapping="Wrap"
                               Margin="{StaticResource SmallTopMargin}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
