<UserControl x:Class="HnVue.Console.Views.Panels.ProtocolSelectionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400"
             Loaded="OnLoaded">

    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Protocol Selection"
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="{StaticResource MediumPadding}"/>

            <!-- Protocol Selection -->
            <Grid Grid.Row="1" Margin="{StaticResource MediumPadding}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Body Part Selection -->
                <TextBlock Grid.Row="0"
                           Text="Body Part"
                           Style="{StaticResource BodyTextStyle}"
                           FontWeight="SemiBold"/>
                <ComboBox Grid.Row="1"
                          ItemsSource="{Binding BodyParts}"
                          SelectedItem="{Binding SelectedBodyPart}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Code"
                          Style="{StaticResource BaseComboBoxStyle}"
                          Margin="{StaticResource SmallTopMargin}"
                          SelectionChanged="OnBodyPartSelectionChanged"/>

                <!-- Projection Selection -->
                <TextBlock Grid.Row="2"
                           Text="Projection"
                           Style="{StaticResource BodyTextStyle}"
                           FontWeight="SemiBold"
                           Margin="{StaticResource MediumTopMargin}"/>
                <ComboBox Grid.Row="3"
                          ItemsSource="{Binding Projections}"
                          SelectedItem="{Binding SelectedProjection}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Code"
                          Style="{StaticResource BaseComboBoxStyle}"
                          Margin="{StaticResource SmallTopMargin}"/>

                <!-- Loading Indicator -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar Width="100" Height="4" IsIndeterminate="True"/>
                    <TextBlock Text="Loading..."
                               Style="{StaticResource BodyTextStyle}"
                               Margin="{StaticResource SmallLeftMargin}"/>
                </StackPanel>

                <!-- Selected Protocol Info -->
                <Border Grid.Row="4"
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource SmallCornerRadius}"
                        Padding="{StaticResource SmallPadding}"
                        VerticalAlignment="Stretch"
                        Visibility="{Binding SelectedProtocol, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Selected Protocol"
                                   Style="{StaticResource CaptionTextStyle}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding SelectedProtocol.ProtocolId}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="{StaticResource SmallTopMargin}"/>
                        <TextBlock Text="{Binding SelectedProtocol.Description}"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="{StaticResource SmallTopMargin}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Select Button -->
            <Button Grid.Row="1"
                    Content="Select Protocol"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding SelectProtocolCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="{StaticResource MediumPadding}"/>
        </Grid>
    </Border>
</UserControl>
