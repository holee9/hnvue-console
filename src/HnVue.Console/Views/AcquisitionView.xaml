<UserControl x:Class="HnVue.Console.Views.AcquisitionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:panels="clr-namespace:HnVue.Console.Views.Panels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Loaded="OnLoaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"
                Background="{StaticResource HeaderBrush}"
                Padding="{StaticResource MediumPadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Acquisition"
                           Style="{StaticResource TitleTextStyle}"
                           Foreground="{StaticResource WhiteBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Start Preview"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding StartPreviewCommand}"
                            Width="120"
                            Margin="{StaticResource SmallLeftMargin}"/>
                    <Button Content="Stop Preview"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding StopPreviewCommand}"
                            Width="120"
                            Margin="{StaticResource SmallLeftMargin}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Preview Area -->
        <Border Grid.Column="0" Grid.Row="1"
                Background="Black"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="2"
                CornerRadius="{StaticResource MediumCornerRadius}"
                Margin="{StaticResource MediumPadding}"
                Padding="{StaticResource SmallPadding}">
            <Grid>
                <!-- Preview Image -->
                <Image Source="{Binding PreviewBitmap}"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- No Preview Indicator -->
                <TextBlock Text="No Preview"
                           Style="{StaticResource SubtitleTextStyle}"
                           Foreground="{StaticResource WhiteBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsPreviewActive, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                <!-- Exposing Overlay -->
                <Grid Background="#80000000"
                      Visibility="{Binding IsExposing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar Width="200" Height="20" IsIndeterminate="True"/>
                        <TextBlock Text="Exposing..."
                                   Style="{StaticResource TitleTextStyle}"
                                   Foreground="{StaticResource WhiteBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="{StaticResource MediumTopMargin}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Control Panels -->
        <ScrollViewer Grid.Column="1" Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="{StaticResource MediumPadding}">
            <StackPanel>
                <!-- Protocol Selection Panel -->
                <panels:ProtocolSelectionPanel Margin="{StaticResource SmallMargin}"/>

                <!-- Exposure Parameter Panel -->
                <panels:ExposureParameterPanel Margin="{StaticResource SmallMargin}"/>

                <!-- AEC Toggle Panel -->
                <panels:AECTogglePanel Margin="{StaticResource SmallMargin}"/>

                <!-- Dose Display Panel -->
                <panels:DoseDisplayPanel Margin="{StaticResource SmallMargin}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Exposure Trigger Bar -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                Background="{StaticResource HeaderBrush}"
                Padding="{StaticResource MediumPadding}"
                Margin="{StaticResource MediumPadding}"
                CornerRadius="{StaticResource MediumCornerRadius}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Procedure: "
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource WhiteBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedProcedureId}"
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource WhiteBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="TRIGGER EXPOSURE"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding TriggerExposureCommand}"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="{StaticResource MediumPadding}"
                        MinWidth="200"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
